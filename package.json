    "i18n-abide": "0.0.14",
    "request": "2.27.0"
  },
  "devDependencies": {
    "awsbox": "0.6.x",
    "awsboxen": "0.5.x",
    "binary-split": "*",
    "through": "*",
    "lazysmtp": "git://github.com/dannycoates/node-lazysmtp.git#9bb3712992",
    "mailparser": "0.3.6",
    "tap": "0.4.6",
    "grunt-contrib-jshint": "~0.7.0",
    "load-grunt-tasks": "~0.2.0",
    "grunt": "~0.4.1",
    "ass": "0.0.4",
