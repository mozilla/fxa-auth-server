{
  "name": "fxa-auth-server",
  "version": "1.19.0",
  "description": "An identity provider for PiCL services",
  "bin": {
    "fxa-auth": "./bin/key_server.js"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "NODE_ENV=dev scripts/test-local.sh && grunt",
    "start": "NODE_ENV=dev scripts/start-local.sh 2>&1 | bunyan -o short",
    "test-quick": "npm run tq",
    "tq": "NODE_ENV=dev tap test/local 2>/dev/null && NODE_ENV=dev scripts/test-remote-quick.js",
    "test-remote": "MAILER_HOST=restmail.net MAILER_PORT=80 tap --timeout=300 --tap test/remote"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/johngruen/fxa-auth-server.git"
  },
  "bugs": "https://github.com/mozilla/johngruen/issues/",
  "homepage": "https://github.com/johngruen/fxa-auth-server/",
  "license": "MPL 2.0",
  "author": "Mozilla (https://mozilla.org/)",
  "readmeFilename": "README.md",
  "engines": {
    "node": "0.10.x"
  },
  "dependencies": {
    "aws-sdk": "2.0.11",
    "binary-split": "0.1.2",
    "bunyan": "1.0.0",
    "compute-cluster": "0.0.9",
    "convict": "0.4.2",
    "fxa-auth-mailer": "https://github.com/johngruen/fxa-auth-mailer.git",
    "hapi": "6.4.0",
    "hapi-auth-hawk": "1.1.1",
    "hkdf": "0.0.2",
    "joi": "4.6.2",
    "jwcrypto": "0.4.4",
    "p-promise": "0.4.6",
    "poolee": "0.4.15",
    "scrypt-hash": "1.1.8",
    "through": "2.3.4",
    "uuid": "1.4.1"
  },
  "devDependencies": {
    "ass": "0.0.4",
    "fxa-auth-db-mem": "0.18.2",
    "grunt": "0.4.5",
    "grunt-cli": "0.1.13",
    "grunt-contrib-jshint": "0.10.0",
    "grunt-copyright": "0.1.0",
    "grunt-nsp-shrinkwrap": "0.0.3",
    "hawk": "2.2.3",
    "load-grunt-tasks": "0.6.0",
    "mailparser": "0.4.4",
    "request": "2.40.0",
    "simplesmtp": "0.3.32",
    "sjcl": "1.0.1",
    "tap": "0.4.12"
  }
}
