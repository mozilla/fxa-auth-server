  "license": "MPL 2.0",
  "author": "Mozilla (https://mozilla.org/)",
  "readmeFilename": "README.md",
  "engines": {
    "node": "0.10.x"
  },
  "dependencies": {
    "mysql": "2.0.0-rc2",
    "srp": "0.2.0",
    "uuid": "1.4.1",
    "hapi": "1.20.0",
    "hawk": "1.1.2",
    "hkdf": "0.0.1",
    "sjcl": "1.0.0",
    "compute-cluster": "git://github.com/dannycoates/node-compute-cluster.git#0222a742",
    "jwcrypto": "0.4.4",
    "handlebars": "1.0.10",
    "convict": "0.4.1",
